<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Common name</th>
      <th>Botanical name</th>
      <th>Care</th>
      <th>Care link</th>
      <th>Sunlight</th>
      <th>Water</th>
      <th>Soil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.common_name %></td>
        <td><%= plant.botanical_name %></td>
        <td><%= plant.care %></td>
        <td><%= plant.care_link %></td>
        <td><%= plant.sunlight %></td>
        <td><%= plant.water %></td>
        <td><%= plant.soil %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

